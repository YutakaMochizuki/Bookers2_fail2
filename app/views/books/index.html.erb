<div>
  <h1>User info</h1>
</div>

<div>
  <h1>New book</h1>
  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>


<div>
  <div>
    <h1>Books</h1>
  </div>

  <% @books.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
     <%= image_tag book.get_image %><br>
     <%= book.user.name %>
    <% end %>
  </div>

  <div>
    <div><%= book.title %></div>
    <div><%= book.body %></div>
    <% if @book.user == current_user %>
      <div><%= link_to "Edit" %></div>
      <div><%= link_to "Destroy", book_path(@book), method: :delete %></div>
    <% end %>
  </div>
  <% end %>
</div>