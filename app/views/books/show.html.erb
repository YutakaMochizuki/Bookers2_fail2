<div>
  <h1>User info</h1>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
</div>

<div>
  <h1>New book</h1>
  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>


<div>
  <div>
    <h1>Book detail</h1>
  </div>

  <div>
     <%= image_tag @book.user.get_profile_image(100,100) %><br>
  </div>

  <div>
    <div><%= @book.title %></div>
    <div><%= @book.body %></div>
    <% if @book.user == current_user %>
      <div><%= link_to "Edit" %></div>
      <div><%= link_to "Destroy", book_path(@book), method: :delete %></div>
    <% end %>
  </div>

</div>