<div>
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div>
          <h1>User info</h1>
          <table class="table table-striped">
            <div>
              <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
              <p>name</p>
              <p><%= current_user.name %></p>
            </div>
            <div>
              <p>introduction</p>
              <p>sanmple</p>
            </div>
          </table>
        </div>
        <div>
          <h1>New book</h1>
          <%= form_with model: @book do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            <h4>Opinion</h4>
            <%= f.text_area :body %><br>
            <div class="books_index_btn">
              <%= f.submit 'Create Book' %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="col-lg-8">
        <div>
          <h1>Book detail</h1>
        </div>
        <table class="table table-striped">
          <thead>
          </thead>
          <tbody>
            <tr>
              <th>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
              </th>
              <th><%= @book.title %></th>
              <th><%= @book.body %></th>
              <% if @book.user == current_user %>
                <th>
                  <%= link_to "Edit" %>
                </th>
                <th>
                  <%= link_to "Destroy", book_path(@book), method: :delete %>
                </th>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>