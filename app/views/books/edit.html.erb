<div class="col-6 mx-auto">
  <h1>Editing Book</h1>
  <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
    <div>
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
      <div class="mt-3">
      <p>Opinion</p>
      <p><%= f.text_area :body %><br></p>
      </div>
    <div>
      <%= f.submit 'Update Book', class: "btn btn-success text-white" %>
    </div>
  <% end %>
  <div class="container mt-3">
    <div class="row">
      <div class="mr-1">
        <%= link_to "Show", book_path %>
      </div>
      <div class="mr-1">
        <p>|</p>
      </div>
      <div>
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>