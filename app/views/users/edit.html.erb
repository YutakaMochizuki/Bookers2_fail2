<h1>User info</h1>
<%= form_with model:@user do |f| %>
  <div>
    <label for="inputName">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"" %><br>
  </div>
  <div>
    <label for "inputName">Image</label><br>
    <%= f.file_field :profile_image, placeholder: "", accept: "image/*" %>
  </div>
  <div>
    <label for "inputName">Introduction</label><br>
    <%= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:"" %>
  </div>
  <div>
    <%= f.submit "Update User" %>
  </div>
<% end %>