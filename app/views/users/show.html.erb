<div>
  <div>
    <h1>Books</h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr><th></th><th>Title</th><th>Opinion</th></tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <th>
          <%= link_to book_path(book.id) do %>
              <%= image_tag book.get_image %><br>
          <% end %>
        </th>
        <th><%= link_to book.title, controller: 'books', action: 'show' %></th>
        <th><%= book.body %></th>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
