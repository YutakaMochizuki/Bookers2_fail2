    <h1>Books</h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr><th></th><th>Title</th><th>Opinion</th></tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <th><%= link_to book_path(book.id) do %>
