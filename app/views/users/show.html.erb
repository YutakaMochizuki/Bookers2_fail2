<div>
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div>
          <h1>User info</h1>
          <table class="table table-striped">
            <div>
              <p>name</p>
              <p><%= current_user.name %></p>
            </div>
            <div>
              <p>introduction</p>
              <p>sample</p>
              <p><%= link_to "Edit", edit_user_path(@user.id) %></p>
            </div>
          </table>

        </div>
        <div>
          <h1>New book</h1>
          <%= form_with model: @book do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            <h4>Opinion</h4>
            <%= f.text_area :body %><br>
            <div class="books_index_btn">
              <%= f.submit 'Create Book' %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-8">
        <div>
          <h1>Books</h1>
        </div>
        <table class="table table-striped">
          <thead>
            <tr><th></th><th>Title</th><th>Opinion</th></tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>

            <tr>
              <th><%= link_to book_path(book.id) do %>
                  <%= image_tag book.get_image %><br>
                  <% end %>
              </th>
              <th><a href="/books/@book.id">title</a></th>
              <th>body</th>
            </tr>
          </tbody>
          <% end %>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>